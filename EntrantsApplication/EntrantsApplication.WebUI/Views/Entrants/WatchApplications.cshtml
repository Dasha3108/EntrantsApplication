@using EntrantsApplication.WebUI.Models.ApplicationModels
@model IEnumerable<ListApplication>

@{
    ViewBag.Title = "WatchApplications";
}

<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div style="margin-top:20px">
        <h3 style="margin-left:20px; text-align:left; font-size:24px">
            <a>@Html.ActionLink("Return to Main Menu", "MainMenu")</a>
        </h3>
        <h1 style="margin-top: -45px; text-align:center">Applications</h1>
    </div>

    <div style="margin-left:1%; margin-right:1%">
        @if (Model.Count() != 0)
        {
            foreach (var application in Model)
            {
                <div style="background-color:lightblue; text-align:center; margin-top:30px;
                    padding-bottom:5px; padding-top:5px">
                    <div style="font-size:24px; font-weight:bold; font-style:italic;">
                        Application Id: @application.ApplicationId
                    </div>
                    @{int counter = 1;}
                    @foreach (var speciality in application.getSpecialities())
                    {
                        if (speciality != null)
                        {
                            <div>
                                <div style="margin-top:10px; font-size:22px; font-weight:bold; font-style:italic">
                                    Speciality @counter:
                                </div>
                                <div style="font-size:22px">
                                    @foreach (var specialityString in speciality)
                                    {
                                        <div style="margin-top:5px">
                                            @specialityString
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        counter++;
                    }
                </div>
            }
        }
        else
        {        
            <p style="margin-left:30%; font-size:larger">
                No applications
            </p>
        }
    </div>
</body>
